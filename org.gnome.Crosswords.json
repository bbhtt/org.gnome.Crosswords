{
    "app-id" : "org.gnome.Crosswords",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "crosswords",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--env=PUZZLE_SET_PATH=/app/extensions/puzzle-sets"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/libexec/installed-tests",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "add-extensions": {
        "org.gnome.Crosswords.PuzzleSets": {
            "directory": "extensions",
            "version" : "1",
            "subdirectories": true,
            "merge-dirs": "puzzle-sets",
            "autodelete" : true
        }
    },
    "modules" : [
        {
            "name" : "libipuz",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jrb/libipuz.git",
                    "commit" : "e64ee42b9fb1f8a9f7aac82290b10cb66f964ea4"
                }
            ]
        },
        "python3-puzpy.json",
        {
            "name" : "crosswords",
            "buildsystem" : "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jrb/crosswords.git",
                    "commit": "364dd2ea3c44699dc0ceb7f6c2a00659ae2e4cec"
                }
            ],
            "post-install": [
                "install -d /app/extensions"
            ]
        }
    ]
}
