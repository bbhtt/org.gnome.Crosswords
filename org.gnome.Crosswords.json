{
    "app-id" : "org.gnome.Crosswords",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "crosswords",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/libexec/installed-tests",
        "/man",
        "/share/applications/org.gnome.Adwaita1.Demo.desktop",
        "/share/metainfo/org.gnome.Adwaita1.Demo.metainfo.xml",
        "/share/icons/hicolor/symbolic/apps/org.gnome.Adwaita1.Demo-symbolic.svg",
        "/share/icons/hicolor/scalable/apps/org.gnome.Adwaita1.Demo.svg",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "add-extensions": {
        "org.gnome.Crosswords.PuzzleSets": {
            "directory": "share/crosswords/puzzle-sets",
            "bundle" : true,
            "autodelete" : true
        }
    },
    "modules" : [
        {
            "name" : "libsass",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "libipuz",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jrb/libipuz.git",
                    "branch" : "master"
                }
            ]
        },
        "python3-puzpy.json",
        {
            "name" : "crosswords",
            "buildsystem" : "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jrb/crosswords.git",
                    "commit": "5466adf0bcfe03ec74b9932495084e7649e99031"
                }
            ]
        }
    ]
}
