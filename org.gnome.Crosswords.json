{
    "app-id" : "org.gnome.Crosswords",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "crosswords",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--env=PUZZLE_SET_PATH=/app/extensions/puzzle-sets"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/libexec/installed-tests",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "add-extensions": {
        "org.gnome.Crosswords.PuzzleSets": {
            "directory": "extensions",
            "version" : "1",
            "subdirectories": true,
            "merge-dirs": "puzzle-sets",
            "autodelete" : true
        }
    },
    "modules" : [
        {
            "name" : "libsass",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "libipuz",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "path" : "https://gitlab.gnome.org/jrb/libipuz.git",
                    "commit" : "3f506d21dacc91f9edae48b38eebf893baa62e8d"
                }
            ]
        },
        "python3-puzpy.json",
        {
            "name" : "crosswords",
            "buildsystem" : "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jrb/crosswords.git",
                    "tag": "0.3.0"
                }
            ],
            "post-install": [
                "install -d /app/extensions"
            ]
        }
    ]
}
